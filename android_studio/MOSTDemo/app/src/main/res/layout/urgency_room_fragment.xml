<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/urgency_spinner"
            android:layout_width="@dimen/input_view_width"
            android:layout_height="@dimen/input_view_height"
            android:layout_margin="@dimen/default_edge_margin"
            android:background="@drawable/textview_shape"
            android:dropDownVerticalOffset="70dp"
            android:gravity="start"/>

        <Spinner
            android:id="@+id/room_spinner"
            android:layout_width="@dimen/input_view_width"
            android:layout_height="@dimen/input_view_height"
            android:layout_margin="@dimen/default_edge_margin"
            android:background="@drawable/textview_shape"
            android:dropDownVerticalOffset="70dp"
            android:gravity="start"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="@dimen/input_view_width"
            android:layout_height="@dimen/input_view_height"
            android:layout_marginBottom="@dimen/default_edge_margin"
            android:layout_marginLeft="@dimen/default_edge_margin"
            android:layout_marginRight="@dimen/default_edge_margin"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_button"
            android:text="@string/confirm"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>