<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patient_header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/lbl_patients"
            android:textSize="@dimen/label_text_size"/>

        <TextView
            android:id="@+id/text_summary_patient_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/default_edge_margin"
            android:textSize="@dimen/textview_text_size"/>

        <TextView
            android:id="@+id/text_summary_patient_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/default_edge_margin"
            android:textSize="@dimen/textview_text_size"/>

        <TextView
            android:id="@+id/urgency_header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/urgency"
            android:textSize="@dimen/label_text_size"/>

        <TextView
            android:id="@+id/text_summary_urgency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/default_edge_margin"
            android:textSize="@dimen/textview_text_size"/>

        <TextView
            android:id="@+id/room_header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/room"
            android:textSize="@dimen/label_text_size"/>

        <TextView
            android:id="@+id/text_summary_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/default_edge_margin"
            android:textSize="@dimen/textview_text_size"/>

        <Button
            android:id="@+id/button_summary_start_emergency"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_button"
            android:text="@string/start_session"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="@dimen/default_edge_margin"
            android:layout_marginRight="@dimen/default_edge_margin"
            android:layout_marginBottom="@dimen/default_edge_margin"/>

    </LinearLayout>
</ScrollView>