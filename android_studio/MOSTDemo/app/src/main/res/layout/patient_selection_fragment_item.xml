<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/patient_full_name_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/default_edge_margin"
        android:layout_marginRight="@dimen/default_edge_margin"
        android:layout_weight=".45"
        android:gravity="center_vertical"
        android:padding="@dimen/default_edge_margin"
        android:textSize="@dimen/textview_text_size"/>

    <TextView
        android:id="@+id/patient_id_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/default_edge_margin"
        android:layout_marginRight="@dimen/default_edge_margin"
        android:layout_weight=".55"
        android:gravity="center_vertical"
        android:padding="@dimen/default_edge_margin"
        android:textSize="@dimen/textview_text_size"/>

</LinearLayout>

