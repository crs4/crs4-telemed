<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/text_tc_patient"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_edge_margin"
        android:paddingLeft="@dimen/default_edge_margin"
        android:paddingRight="@dimen/default_edge_margin"
        android:paddingStart="@dimen/default_edge_margin"
        android:textSize="@dimen/textview_text_size"/>

    <TextView
        android:id="@+id/text_tc_description"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_edge_margin"
        android:paddingLeft="@dimen/default_edge_margin"
        android:paddingRight="@dimen/default_edge_margin"
        android:paddingStart="@dimen/default_edge_margin"
        android:textSize="@dimen/textview_text_size"/>

    <TextView
        android:id="@+id/text_tc_applicant"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_edge_margin"
        android:paddingLeft="@dimen/default_edge_margin"
        android:paddingRight="@dimen/default_edge_margin"
        android:paddingStart="@dimen/default_edge_margin"
        android:textSize="@dimen/textview_text_size"/>

    <TextView
        android:id="@+id/text_tc_urgency"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_edge_margin"
        android:paddingLeft="@dimen/default_edge_margin"
        android:paddingRight="@dimen/default_edge_margin"
        android:paddingStart="@dimen/default_edge_margin"
        android:textSize="@dimen/textview_text_size"/>

</LinearLayout>

